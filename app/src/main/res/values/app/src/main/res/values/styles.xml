<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_gold</item>
        <item name="colorPrimaryDark">@color/primary_gold_dark</item>
        <item name="colorAccent">@color/primary_gold</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="CardStyle" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/primary_gold_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_gold</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
